#ik heb hieronder wat jij had gemaakt wat aangepast. Het maakt nu twee lijsten van lijsten, 1 is het complete deck en 2 is een speelveld met twaalf random
# kaarten waar alle kleuren en vormen worden aangegeven met getallen 1 tot 3.

import random
class Card:
    def __init__(self, aantal, kleur, vorm, vulling):
        self.aantal = aantal
        self.kleur = kleur
        self.vorm = vorm
        self.vulling = vulling

#om het totale kaarten set te maken        
def create_total_cardset():
    pakket = []
    n = 0
    for i in range(1,4):
        aantal = i 
        for j in range(1,4):
            kleur = j
            for k in range(1,4):
                vorm = k
                for l in range(1,4):
                    vulling = l
                    kaart = Card(aantal,kleur,vorm,vulling)
                    n += 1
                    pakket.append(["kaart", n, kaart.aantal,kaart.kleur,kaart.vorm,kaart.vulling])
    return pakket
#Pak een paar random kaarten uit het totale pakket
def create_speelveld():
    deck = create_total_cardset()
    speelveld = []
    for _ in range(1,13):
        a = random.randrange(len(deck))
        speelveld.append(deck[a])
        deck.remove(deck[a])
   
    return speelveld
#maak een random kaart
def create_random_card():
    aantal = random.randrange(1,4)
    kleur = random.randrange(1,4)
    vorm = random.randrange(1,4)
    vulling = random.randrange(1,4)
    kaart = Card(aantal,kleur,vorm,vulling)
    return kaart

def main():
    #maakt een speelveld met random gemaakte kaarten
    random_speelveld = []
    for i in range(1,13):
        kaart = create_random_card()
        random_speelveld.append(["kaart", i, kaart.aantal,kaart.kleur,kaart.vorm,kaart.vulling])
    print("random speelveld", random_speelveld)
    #maakt een speelveld met random getrokken kaarten uit het totale pakket
    print("random speelveld 2",create_speelveld())
main()
